@model IEnumerable<EntityFramework1.Models.Question>
@{
}
 <form action="/ChooseQuiz/Answers" method="POST">
    
    @foreach(Question q in Model)
    {

        <div class="form-group d-none">
            <input type="text" value="@q.QuestionQuiz.">
        </div>    
        <div class="form-group mb-2 row">
            <label class="col-sm-3 col-form-label">@q.Text</label>
            <div class="col-sm-9">
                
                    @foreach (var answer in (ViewData["Answers"] as IEnumerable<ItemOption>).Where(x => x.QuestionId == q.QuestionId))
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="@q.QuestionId" value="@answer.OptionId">
                            <label class="form-check-label" for="flexRadioDefault1">@answer.Text</label>
                        </div>
                        
                        @*<option value="@answer.OptionId">@answer.Text</option>*@
                    }
                 
            </div>
        </div>
        
    }
    
  <input type="submit" value="Submit" class="btn btn-primary mb-2" />
</form> 